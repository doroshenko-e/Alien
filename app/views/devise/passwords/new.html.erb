<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <h2>Forgot your password?</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    	<%= devise_error_messages! %>
    	<% f.hidden_field :reset_password_token %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
      </div>
      <div class="actions">
        <%= f.submit 'Reset Password', class: 'btn btn-danger' %>
        <%= link_to 'I Remember Password', new_user_session_path, class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>


