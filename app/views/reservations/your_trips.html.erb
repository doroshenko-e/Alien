<div class="row">
	<div class="col-md-3">
		<div class="nav flex-column nav-pills">
			<%= link_to 'Your Listings', rooms_path, class: "nav-link " %>
			<%= link_to 'Your Reservations', your_reservations_path, class: "nav-link" %>
			<%= link_to 'Your Trips', your_trips_path, class: "nav-link active" %>
		</div>
	</div>
	<div class="col-md-9">
		<div class="card">
			<div class="card-head">
				Your Trips
			</div>
			<div class="card-body">
				<% @trips.each do |trip| %>
				<div class="row">
					<div class="col-md-2">
						<%= trip.start_date.strftime('%v') %>
					</div>
					<div class="col-md-6 d-block w-100 img-fluid">
						<%= link_to room_path(trip.room) do %>
							<%= image_tag trip.room.images.first.photo_url(:thumb).to_s if trip.room.images.length > 0 %>
						<% end %>
					</div>
					<div class="col-md-2">
						<%= link_to user_path(trip.room.user) do %>
							<%= image_tag avatar_url(trip.room.user), class: "img-fluid" %>
						<% end %>
					</div>
					<div class="col-md-2">
						$ <%= trip.total %>
					</div>
				</div>
				<hr/>
				<% end %>
			</div>
		</div>
		
	</div>
</div>