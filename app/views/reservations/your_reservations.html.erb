<div class="row">
	<div class="col-md-3">
		<div class="nav flex-column nav-pills">
			<%= link_to 'Your Listings', rooms_path, class: "nav-link " %>
			<%= link_to 'Your Reservations', your_reservations_path, class: "nav-link active" %>
			<%= link_to 'Your Trips', your_trips_path, class: "nav-link" %>
		</div>
	</div>
	<div class="col-md-9">
		<div class="card">
			<div class="card-head">
				Your Reservations
			</div>
			<div class="card-body">
				<% @rooms.each do |room| %>
					<% room.reservations.each do |reservation| %>
						<div class="row">
							<div class="col-md-2">
								<%= reservation.start_date.strftime('%v') %>
							</div>
							<div class="col-md-6 mw-50">
								<%= link_to room_path(reservation.room) do %>
									<%= image_tag reservation.room.images[0].photo_url(:thumb).to_s if reservation.room.images.length > 0 %>
								<% end %>
							</div>
							<div class="col-md-2">
								<%= link_to user_path(reservation.user) do %>
									<%= image_tag avatar_url(reservation.room.user), class: "img-fluid" %>
								<% end %>
							</div>
							<div class="col-md-2">
								$ <%= reservation.total %>
							</div>
						</div>
					<hr/>
					<% end %>
				<% end %>
			</div>
		</div>
		
	</div>
</div>